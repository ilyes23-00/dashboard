.header 
    i.fas.fa-exchange-alt.fa-lg.toggle-sidebar  
    .dropdown.notifications-container
      i.fas.fa-bell.fa-lg.toggle-notification.header-icon#notification(data-toggle='dropdown' aria-haspopup='true' aria-expanded='false')
      .dropdown-menu(aria-labelledby='notification')
        .noti-head 
            | Notifcations 
            span 50
        .noti-content 
            ul.list-unstyled 
                li 
                    i.fas.fa-envelope.fa-lg.header-icon
                    |  You got mail from user
                li 
                    i.fas.fa-money-bill-wave.fa-lg.header-icon
                    |  You got money from user
                li 
                    i.fas.fa-thumbs-up.fa-lg.header-icon
                    |  You got likes from user
        .noti-footer.text-center: a(href="#") View  all notifications  
    i.fas.fa-expand.fa-lg.toggle-fullscreen.header-icon

    .dropdown.username-container
        .uesername#usermenu(data-toggle='dropdown' aria-haspopup='true' aria-expanded='false')
            img.avatar.rounded-circle(src="imgs/img_avatar.png", alt="user")
            span.user EASYBOX 
            i.fas.fa-angle-down.fa-lg
        .dropdown-menu.dropdown-menu-right(aria-labelledby='usermenu')
            .user-info 
                h3 EASYBOX 
                p Premium Member 
            hr
            ul.list-unstyled.activities-list
                li added comment
                li Create posts
                li Created chart
                li add comment list
            hr
            .row.user-menu-links 
                .col 
                    .link-box 
                        i.fas.fa-user.fa-lg.fa-fw
                        span Acount 
                .col 
                    .link-box 
                        i.fas.fa-cog.fa-lg.fa-fw
                        span Setting 
                .col 
                    .link-box 
                        i.fas.fa-power-off.fa-lg.fa-fw
                        span Log out 